<nav class="bg-white/10 backdrop-blur-md">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-4">
            <a href="/" class="text-2xl font-bold text-white">CourseHub</a>
            
            <div class="flex items-center gap-6">
                <% if (user) { %>
                    <!-- Show for logged-in users -->
                    <div class="relative group">
                        <button class="text-white hover:text-purple-200 flex items-center gap-2">
                            <span>Welcome, <%= user.username %></span>
                            <i class="fas fa-chevron-down text-sm"></i>
                        </button>
                        <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 hidden group-hover:block">
                            <% if (user.role === 'admin') { %>
                                <a href="/admin/dashboard" class="block px-4 py-2 text-gray-800 hover:bg-purple-50">
                                    <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
                                </a>
                            <% } %>
                            <a href="/profile" class="block px-4 py-2 text-gray-800 hover:bg-purple-50">
                                <i class="fas fa-user mr-2"></i>Profile
                            </a>
                            <a href="/auth/logout" class="block px-4 py-2 text-red-600 hover:bg-red-50">
                                <i class="fas fa-sign-out-alt mr-2"></i>Logout
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Show for non-logged-in users -->
                    <a href="/auth/login" class="text-white hover:text-purple-200">Login</a>
                    <a href="/auth/register" 
                       class="bg-gradient-to-r from-green-400 to-teal-400 text-white px-4 py-2 rounded-full hover:from-green-500 hover:to-teal-500 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                        Sign Up
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</nav>