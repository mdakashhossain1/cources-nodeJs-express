<div class="flex justify-center items-center min-h-screen">
    <div class="glass-morphism p-8 w-full max-w-md mx-4">
        <h2 class="text-4xl font-bold text-white mb-8 text-center">Register</h2>
        
        <% if (error) { %>
            <div class="bg-red-500/20 text-white p-3 rounded mb-4">
                <%= error %>
            </div>
        <% } %>

        <form action="/auth/register" method="POST" class="space-y-6">
            <div>
                <label class="block text-white text-lg mb-2">Username</label>
                <input 
                    type="text" 
                    name="username" 
                    required 
                    class="w-full p-3 rounded-lg bg-white/10 border border-white/30 text-white placeholder-white/50 focus:outline-none focus:border-white/50"
                    placeholder="Choose a username"
                >
            </div>

            <div>
                <label class="block text-white text-lg mb-2">Email</label>
                <input 
                    type="email" 
                    name="email" 
                    required 
                    class="w-full p-3 rounded-lg bg-white/10 border border-white/30 text-white placeholder-white/50 focus:outline-none focus:border-white/50"
                    placeholder="Enter your email"
                >
            </div>

            <div>
                <label class="block text-white text-lg mb-2">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    required 
                    class="w-full p-3 rounded-lg bg-white/10 border border-white/30 text-white placeholder-white/50 focus:outline-none focus:border-white/50"
                    placeholder="Choose a password"
                >
            </div>

            <button 
                type="submit" 
                class="w-full bg-white text-purple-600 py-2"
            >
                Register
            </button>
        </form>

        <p class="text-white/90 mt-6 text-center text-sm">
            Already have an account? 
            <a href="/auth/login" class="text-white hover:text-white/80 underline">Login here</a>
        </p>
    </div>
</div> 